import os

from datetime import date

today = date.today().strftime('%Y')
today = int(today)
print("Hello, please state your name and birthyear")
myName = input()
myBirthYear = input()
myBirthYear = int(myBirthYear)
myAge = today - myBirthYear
myAge = str(myAge)
print(myName + ", your age is " + myAge)
